<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:id="@+id/siteurl_editext"
        android:hint="Site Url"
        android:background="@drawable/apptheme_textfield_focused_holo_light"
        android:textColor="#40CC99"
        android:gravity="center"
        android:layout_marginBottom="38dp"
        android:layout_above="@+id/username_edittext"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:id="@+id/username_edittext"
        android:hint="Username"
        android:background="@drawable/apptheme_textfield_focused_holo_light"
        android:textColor="#40CC99"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:id="@+id/password_editext"
        android:hint="Password"
        android:background="@drawable/apptheme_textfield_focused_holo_light"
        android:textColor="#40CC99"
        android:gravity="center"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/username_edittext"
        android:layout_alignLeft="@+id/username_edittext"
        android:layout_alignStart="@+id/username_edittext" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:textColor="#B6D4F6"
        android:background="@drawable/backbut"
        android:text="AddSite"

        android:gravity="center"
        android:id="@+id/addsite_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_alignRight="@+id/password_editext"
        android:layout_alignEnd="@+id/password_editext"
        android:layout_alignLeft="@+id/password_editext"
        android:layout_alignStart="@+id/password_editext" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/site"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/siteurl_editext" />
</RelativeLayout>