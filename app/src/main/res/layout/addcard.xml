<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:textColor="#B6D4F6"
        android:background="@drawable/backbut"
        android:text="Add Card"
        android:id="@+id/add_card_button"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:id="@+id/card_name_text"
        android:hint="Card Holder Name"
        android:inputType="text"
        android:background="@drawable/apptheme_textfield_focused_holo_light"
        android:textColor="#40CC99"
        android:gravity="center"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/card_cardno_text"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:id="@+id/card_cardno_text"
        android:inputType="date"
        android:hint="Card No"
        android:background="@drawable/apptheme_textfield_focused_holo_light"
        android:textColor="#40CC99"
        android:gravity="center"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/card_expdate_text"
        android:layout_alignLeft="@+id/card_name_text"
        android:layout_alignStart="@+id/card_name_text" />

    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:id="@+id/card_expdate_text"
        android:inputType="date"
        android:gravity="center"
        android:background="@drawable/apptheme_textfield_focused_holo_light"
        android:textColor="#40CC99"
        android:hint="ExpDate"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/card_cvv_text"
        android:layout_alignLeft="@+id/card_cardno_text"
        android:layout_alignStart="@+id/card_cardno_text" />

    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:id="@+id/card_cvv_text"
        android:inputType="number"
        android:hint="Cvv/Cvv2"
        android:background="@drawable/apptheme_textfield_focused_holo_light"
        android:textColor="#40CC99"
        android:gravity="center"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/add_card_button"
        android:layout_alignLeft="@+id/card_expdate_text"
        android:layout_alignStart="@+id/card_expdate_text" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:src="@drawable/card"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/card_name_text"
        android:layout_alignParentTop="true" />


</RelativeLayout>