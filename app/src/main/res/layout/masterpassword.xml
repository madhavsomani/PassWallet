<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="#40CC99"
        android:hint="Master Password"
        android:inputType="textPassword"
        android:background="@drawable/apptheme_textfield_focused_holo_light"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:textColor="#B6D4F6"
        android:background="@drawable/backbut"

        android:text="Login"
        android:id="@+id/button"

        android:layout_marginTop="71dp"

        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#B6D4F6"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Default Master Passwrord : 1234"
        android:id="@+id/textView2"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <ImageView
        android:layout_width="200sp"
        android:layout_height="150sp"
        android:id="@+id/imageView3"
        android:background="@drawable/logo"
        android:paddingTop="25sp"

        android:layout_above="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp" />
</RelativeLayout>